{
	"metadata": [
		{
			"src": [
				{
					"src": "..",
					"files": [
						"Ibralogue/Scripts/**/*.cs"
					],
					"exclude": [
					]
				}
			],
			"globalNamespaceId": "Global",
			"filter": "filterConfig.yml",
			"dest": "api"
		}
	],
	"build": {
		"template": [ "default", "templates/unity" ],
		"globalMetadata": {
			"_appTitle": "Ibralogue Docs",
			"_appFooter": "Ibralogue Docs",
			"_enableSearch": true
		},
		"content": [
			{
				"files": [
					"toc.yml",
					"index.md"
				]
			},
			{
				"src": "api",
				"files": [
					"*.yml"
				],
				"dest": "api"
			},
			{
				"src": "manual",
				"files": [
					"toc.yml",
					"*.md"
				],
				"dest": "manual"
			}
		],
		"overwrite": [
			{
				"src": "..",
				"files": [
					"Ibralogue/Scripts/**/*.md"
				]
			}
		],
		"resource": [
			{
				"files": [
					"resources/**/*"
				]
			}
		],
		"sitemap": {
			"baseUrl": "https://ibralogue.github.io/Ibralogue",
			"changefreq": "weekly",
			"fileOptions": {
				"api/*": {
					"changefreq": "daily"
				}
			}
		},
		"xref": [
			"https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
		],
		"xrefService": [
			"https://xref.docs.microsoft.com/query?uid={uid}"
		],
		"dest": "../_site"
	}
}